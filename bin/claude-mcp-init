#!/usr/bin/env python3
"""
Claude MCP Init - Python-only Entry Point

Pure Python executable for the Claude MCP Init tool.
This replaces the previous Zsh/Python hybrid architecture.
"""

import os
import sys
from pathlib import Path

# Add the lib directory to Python path for module imports
script_dir = Path(__file__).parent
lib_dir = script_dir.parent / "lib"
sys.path.insert(0, str(lib_dir))

# Import and run the main CLI
try:
    from claude_mcp_init.main import main
    
    if __name__ == "__main__":
        main()
        
except ImportError as e:
    print(f"Error: Failed to import claude_mcp_init module: {e}", file=sys.stderr)
    print("Please ensure Python dependencies are installed:", file=sys.stderr)
    print("  pip install click pyyaml", file=sys.stderr)
    sys.exit(1)
except Exception as e:
    print(f"Error: {e}", file=sys.stderr)
    sys.exit(1)